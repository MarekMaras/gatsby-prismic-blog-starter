{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "uid",
        "placeholder": "ID of the article"
      }
    },
    "created": {
      "type": "Date",
      "config": {
        "label": "created",
        "placeholder": "Created date of the article"
      }
    },
    "modified": {
      "type": "Date",
      "config": {
        "label": "modified",
        "placeholder": "Modified date of the article"
      }
    },
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1, heading2, heading3, heading4, heading5, heading6",
        "label": "title",
        "placeholder": "Title of the article"
      }
    },
    "excerpt": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
        "allowTargetBlank": true,
        "label": "excerpt",
        "placeholder": "Short description of the article"
      }
    },
    "read_time": {
      "type": "Text",
      "config": {
        "label": "read_time",
        "placeholder": "Total time to read the article"
      }
    },
    "article_image": {
      "type": "Image",
      "config": {
        "constraint": {},
        "thumbnails": [],
        "label": "article_image"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "text": [
            {
              "name": "text",
              "display": "text"
            }
          ],
          "quote": [
            {
              "name": "quote",
              "display": "quote"
            }
          ],
          "code": [
            {
              "name": "code",
              "display": "code"
            }
          ],
          "embed": [
            {
              "name": "embed",
              "display": "embed"
            }
          ],
          "raw_text": [],
          "banner": [],
          "meta_information": []
        },
        "choices": {
          "text": {
            "type": "Slice",
            "fieldset": "Text",
            "description": "Rich Text Section",
            "icon": "text_fields",
            "non-repeat": {
              "content": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "content",
                  "placeholder": "Text content of the article"
                }
              }
            },
            "repeat": {},
            "display": "list"
          },
          "quote": {
            "type": "Slice",
            "fieldset": "Quote",
            "description": "Quote Section",
            "icon": "format_quote",
            "display": "list",
            "non-repeat": {
              "quote": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "quote",
                  "placeholder": "Quote to be rendered in Blockquote"
                }
              }
            },
            "repeat": {}
          },
          "image_gallery": {
            "type": "Slice",
            "fieldset": "Image Gallery",
            "description": "Image Gallery with a title and a caption for each image",
            "icon": "photo_library",
            "non-repeat": {
              "name_of_the_gallery": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2",
                  "label": "Name of the gallery",
                  "placeholder": "My beautiful paintings"
                }
              }
            },
            "repeat": {
              "image_caption": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph",
                  "label": "Image caption",
                  "placeholder": "Images caption"
                }
              },
              "gallery_image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": null,
                    "height": null
                  },
                  "thumbnails": [],
                  "label": "Gallery Image"
                }
              }
            }
          },
          "code": {
            "type": "Slice",
            "fieldset": "code",
            "description": "Code Section",
            "icon": "code",
            "display": "list",
            "non-repeat": {
              "type": {
                "type": "Text",
                "config": {
                  "label": "type",
                  "placeholder": "Mention the type of scenario where this code block is used. For ex- type of \"list\" will add some padding to the code block."
                }
              },
              "lang": {
                "type": "Text",
                "config": {
                  "label": "lang",
                  "placeholder": "Language of the code"
                }
              },
              "code": {
                "type": "StructuredText",
                "config": {
                  "multi": "preformatted, embed",
                  "label": "code",
                  "placeholder": "Code"
                }
              }
            },
            "repeat": {}
          },
          "embed": {
            "type": "Slice",
            "fieldset": "Embed",
            "description": "Embed Section",
            "icon": "filter_drama",
            "display": "list",
            "non-repeat": {
              "platform": {
                "type": "Text",
                "config": {
                  "label": "platform",
                  "placeholder": "Platform of the embed URL"
                }
              },
              "embed": {
                "type": "Embed",
                "config": {
                  "label": "embed",
                  "placeholder": "Embed block"
                }
              }
            },
            "repeat": {}
          },
          "raw_text": {
            "type": "Slice",
            "fieldset": "Raw Text",
            "description": "Raw text Section with inline code block",
            "icon": "comment",
            "display": "list",
            "non-repeat": {
              "raw_content": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, embed, list-item, o-list-item, o-list-item",
                  "allowTargetBlank": true,
                  "label": "raw_content",
                  "placeholder": "Raw text content"
                }
              }
            },
            "repeat": {}
          },
          "banner": {
            "type": "Slice",
            "fieldset": "Banner",
            "description": "Banner with caption",
            "icon": "image",
            "non-repeat": {
              "image_banner": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": null,
                    "height": null
                  },
                  "thumbnails": [],
                  "label": "Image Banner"
                }
              }
            },
            "repeat": {},
            "display": "list"
          },
          "meta_information": {
            "type": "Slice",
            "fieldset": "Meta Information",
            "description": "Meta information based on the URL",
            "icon": "info",
            "display": "list",
            "non-repeat": {
              "website_title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1, heading2, heading3, heading4, heading5, heading6",
                  "label": "Website Title",
                  "placeholder": "Title of the website"
                }
              },
              "website_description": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, o-list-item",
                  "label": "Website Description",
                  "placeholder": "Description of the website"
                }
              },
              "website_image": {
                "type": "Text",
                "config": {
                  "label": "Website Image",
                  "placeholder": "Image URL of the website"
                }
              },
              "website_url": {
                "type": "Text",
                "config": {
                  "label": "Website URL",
                  "placeholder": "URL of the website"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "Meta": {
    "categories": {
      "type": "Group",
      "config": {
        "fields": {
          "category": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["category"],
              "label": "category",
              "placeholder": "Category of the article"
            }
          },
          "slug": {
            "type": "Text",
            "config": {
              "label": "slug",
              "placeholder": "Category Slug"
            }
          }
        },
        "label": "categories"
      }
    },
    "author": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["author"],
        "label": "author",
        "placeholder": "Author of the article"
      }
    }
  }
}
